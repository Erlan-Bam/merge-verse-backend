generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum PackType {
  COMMON_PACK
  RARE_PACK
  EPIC_PACK
  LEGENDARY_PACK
}

enum Provider {
  NOWPAYMENTS
  TON
}

enum Rarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
  MYTHIC
}

enum Level {
  L0
  L1
  L2
  L3
  L4
  L5
  L6
  L7
  L8
  L9
  L10
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum PayoutStatus {
  PENDING
  COMPLETED
  PROCESSING
  FAILED
}

enum AuctionStatus {
  ACTIVE
  FINISHED
  CANCELLED
}

enum WinnerChoice {
  COMPENSATION
  GIFT
  PENDING
}

enum ValueType {
  FIXED
  PERCENTAGE
}

enum ReferralSettingsName {
  REFERRAL_FIRST_LEVEL
  REFERRAL_SECOND_LEVEL
  REFERRAL_FULL_COLLECTION
}

model User {
  id         String   @id @default(uuid())
  telegramId String   @unique
  username   String?
  role       Role     @default(USER)
  balance    Decimal  @default(0)
  streak     Int      @default(0)
  isBanned   Boolean  @default(false)
  referredBy String?
  cryptoWallet String?
  photo      String?
  firstReferral  Decimal  @default(0)
  secondReferral Decimal  @default(0)

  activeAt   DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  email            Email?
  referrer         User?    @relation("UserReferrals", fields: [referredBy], references: [id], onDelete: SetNull)
  referrals        User[]   @relation("UserReferrals")

  inventory        Item[]
  craft            CraftItem[]
  auctions         Auction[]
  bids             Bid[]
  payments         Payment[]
  compensations    Compensation[]
  winnings         Winner[] @relation("GiveawayWinner")
  entries          Entry[] @relation("GiveawayEntries")
  payouts          Payout[]

  @@index([referredBy])
}

model Email {
  id        String   @id @default(uuid())
  userId    String   @unique
  email     String   @unique
  isVerified Boolean @default(false)
  code      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

}

model Statistics {
  id            String   @id @default(uuid())
  totalUsers    Int      @default(0)
  totalGifts    Int      @default(0)
  totalAuctions Int      @default(0)
  totalGiveaways Int     @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Gift {
  id        String      @id @default(uuid())
  name      String      @unique
  rarity    Rarity
  url       String

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  inventory  Item[]
  craft      CraftItem[]
  auctions   Auction[]
  giveaways  Giveaway[]
  entries    Entry[]
}

model Item {
  id         String   @id @default(uuid())
  userId     String
  giftId     String
  level      Level
  quantity   Int
  isTradeable Boolean

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  gift       Gift     @relation(fields: [giftId], references: [id], onDelete: Cascade)

  @@unique([userId, giftId, level, isTradeable])
  @@index([userId])
  @@index([giftId])
}

model CraftItem {
  id         String   @id @default(uuid())
  userId     String
  giftId     String
  level      Level
  isTradeable Boolean
  positionX  Int      // 0-3 for 4x4 grid
  positionY  Int      // 0-3 for 4x4 grid

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  gift       Gift     @relation(fields: [giftId], references: [id], onDelete: Cascade)

  @@unique([userId, positionX, positionY])
  @@index([userId])
  @@index([giftId])
}

model History {
  id         String   @id @default(uuid())
  userId     String
  giftId     String
  name       String
  rarity     Rarity
  level      Level

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, giftId, level])
  @@index([userId])
  @@index([giftId])
}

enum SystemSettingsName {
  GIVEAWAY_STEPS
  COLLECTION_VISIBLE
}

model VerticalPrice {
  id        String   @id @default(uuid())
  level     Level    @unique
  price     Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Auction {
  id         String   @id @default(uuid())
  status     AuctionStatus @default(ACTIVE)
  userId     String
  giftId     String
  level      Level
  start      Decimal
  current    Decimal
  endsAt     DateTime

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  gift       Gift     @relation(fields: [giftId], references: [id], onDelete: Cascade)

  bids       Bid[]
  @@index([userId])
  @@index([giftId])
}

model Price {
  id        String   @id @default(uuid())
  level     Level
  rarity    Rarity
  price     Decimal

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([level, rarity])
}

model Bid {
  id         String   @id @default(uuid())
  auctionId  String
  userId     String
  amount     Decimal

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  auction    Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([auctionId, userId])
  @@index([auctionId])
  @@index([userId])
}

model HorizontalPrice {
  id        String   @id @default(uuid())
  name      String
  rarity    Rarity
  price     Decimal

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, rarity])
}

enum GiveawayStatus {
  PENDING
  ACTIVE
  FINISHED
  CANCELLED
}

model Giveaway {
  id         String         @id @default(uuid())
  giftId     String
  status     GiveawayStatus @default(PENDING)
  startAt    DateTime
  endsAt     DateTime

  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  gift       Gift           @relation(fields: [giftId], references: [id], onDelete: Cascade)
  entries    Entry[]
  winners    Winner[]

  @@index([giftId])
  @@index([status])
  @@index([startAt])
  @@index([endsAt])
}

model Winner {
  id          String    @id @default(uuid())
  giveawayId  String
  userId      String
  choice      WinnerChoice @default(PENDING)
  isFinished  Boolean   @default(false)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  giveaway    Giveaway  @relation(fields: [giveawayId], references: [id], onDelete: Cascade)
  user        User      @relation("GiveawayWinner", fields: [userId], references: [id], onDelete: Cascade)

  @@index([giveawayId])
  @@index([userId])
}

model Compensation {
  id         String   @id @default(uuid())
  userId     String
  type       PackType
  amount     Int     @default(1)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Entry {
  id          String    @id @default(uuid())
  giveawayId  String
  userId      String
  giftId      String
  isTradeable Boolean 

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  giveaway    Giveaway  @relation(fields: [giveawayId], references: [id], onDelete: Cascade)
  user        User      @relation("GiveawayEntries", fields: [userId], references: [id], onDelete: Cascade)
  gift        Gift      @relation(fields: [giftId], references: [id], onDelete: Cascade)

  @@index([giveawayId])
  @@index([userId])
}

model Payment {
  id         String   @id @default(uuid())
  userId     String
  amount     Decimal
  provider   Provider
  status     PaymentStatus @default(PENDING)
  externalId String?  @unique

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Payout {
  id         String   @id @default(uuid())
  userId     String
  amount     Decimal
  status     PayoutStatus @default(PENDING)
  externalId String?  @unique

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])

}

model SystemSettings {
  id        String   @id @default(uuid())
  name      SystemSettingsName @unique
  value     Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model ReferralSettings {
  id                String   @id @default(uuid())
  name              ReferralSettingsName @unique
  type              ValueType
  value             Decimal

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}