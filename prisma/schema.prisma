generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Rarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
  MYTHIC
}

enum Level {
  L0
  L1
  L2
  L3
  L4
  L5
  L6
  L7
  L8
  L9
  L10
}

enum AuctionStatus {
  ACTIVE
  FINISHED
  CANCELLED
}

enum WinnerChoice {
  COMPENSATION
  GIFT
  PENDING
}

model User {
  id         String   @id @default(uuid())
  telegramId String   @unique
  role       Role     @default(USER)
  balance    Decimal  @default(0)
  streak     Int      @default(0)
  isBanned   Boolean  @default(false)

  activeAt   DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  inventory        Item[]
  auctions         Auction[]
  bids             Bid[]
  winnings         Winner[] @relation("GiveawayWinner")
  entries          Entry[] @relation("GiveawayEntries")
}

model Gift {
  id        String      @id @default(uuid())
  name      String      @unique
  rarity    Rarity
  url       String

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  inventory  Item[]
  auctions   Auction[]
  giveaways  Giveaway[]
  entries    Entry[]
}

model Item {
  id         String   @id @default(uuid())
  userId     String
  giftId     String
  level      Level
  quantity   Int
  isTradeable Boolean

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  gift       Gift     @relation(fields: [giftId], references: [id], onDelete: Cascade)

  @@unique([userId, giftId, level, isTradeable])
  @@index([userId])
  @@index([giftId])
}

model VerticalPrice {
  id        String   @id @default(uuid())
  level     Level    @unique
  price     Decimal

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Auction {
  id         String   @id @default(uuid())
  status     AuctionStatus @default(ACTIVE)
  userId     String
  giftId     String
  level      Level
  start      Decimal
  current    Decimal
  endsAt     DateTime

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  gift       Gift     @relation(fields: [giftId], references: [id], onDelete: Cascade)

  bids       Bid[]
  @@index([userId])
  @@index([giftId])
}

model Price {
  id        String   @id @default(uuid())
  level     Level
  rarity    Rarity
  price     Decimal

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([level, rarity])
}

model Bid {
  id         String   @id @default(uuid())
  auctionId  String
  userId     String
  amount     Decimal

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  auction    Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([auctionId, userId])
  @@index([auctionId])
  @@index([userId])
}

model HorizontalPrice {
  id        String   @id @default(uuid())
  name      String
  rarity    Rarity
  price     Decimal

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, rarity])
}

enum GiveawayStatus {
  PENDING
  ACTIVE
  FINISHED
  CANCELLED
}

model Giveaway {
  id         String         @id @default(uuid())
  giftId     String
  status     GiveawayStatus @default(PENDING)
  startAt    DateTime
  endsAt     DateTime

  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  gift       Gift           @relation(fields: [giftId], references: [id], onDelete: Cascade)
  entries    Entry[]
  winners    Winner[]

  @@index([giftId])
  @@index([status])
  @@index([startAt])
  @@index([endsAt])
}

model Winner {
  id          String    @id @default(uuid())
  giveawayId  String
  userId      String
  choice      WinnerChoice @default(PENDING)
  isFinished  Boolean   @default(false)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  giveaway    Giveaway  @relation(fields: [giveawayId], references: [id], onDelete: Cascade)
  user        User      @relation("GiveawayWinner", fields: [userId], references: [id], onDelete: Cascade)

  @@index([giveawayId])
  @@index([userId])
}

model Entry {
  id          String    @id @default(uuid())
  giveawayId  String
  userId      String
  giftId      String
  isTradeable Boolean 

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  giveaway    Giveaway  @relation(fields: [giveawayId], references: [id], onDelete: Cascade)
  user        User      @relation("GiveawayEntries", fields: [userId], references: [id], onDelete: Cascade)
  gift        Gift      @relation(fields: [giftId], references: [id], onDelete: Cascade)

  @@index([giveawayId])
  @@index([userId])
}